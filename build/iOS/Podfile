project 'MultiCraft/MultiCraft.xcodeproj'
platform :ios, '9.0'
use_frameworks!

def appodeal
	source 'https://github.com/appodeal/CocoaPods.git'

	pod 'APDAdColonyAdapter', '2.6.0.1-Beta'
	pod 'APDAppLovinAdapter', '2.6.0.1-Beta'
	pod 'APDAppodealAdExchangeAdapter', '2.6.0.1-Beta'
	pod 'APDMintegralAdapter', '2.6.0.1-Beta'
	pod 'APDTapjoyAdapter', '2.6.0.1-Beta'
	pod 'APDUnityAdapter', '2.6.0.1-Beta'
	pod 'PersonalizedAdConsent', :git => 'https://github.com/MoNTE48/consent-sdk-ios'
end

target 'MultiCraft' do
	source 'https://github.com/CocoaPods/Specs.git'
	source 'https://github.com/MoNTE48/VorbisOgg-Specs.git'

	pod 'SSZipArchive'
	pod 'leveldb-library'
	pod 'libCurlPod', :git => 'https://github.com/MoNTE48/libCurlPod'
	pod 'libvorbis'

	appodeal
end

post_install do |installer|
	installer.pods_project.targets.each do |target|
		target.build_configurations.each do |config|
			config.build_settings['GCC_FAST_MATH'] = 'YES'
			config.build_settings['GCC_OPTIMIZATION_LEVEL'] = 'fast'
			config.build_settings['GCC_SYMBOL_PRIVATE_EXTERN'] = 'YES'
			config.build_settings['GCC_UNROLL_LOOPS'] = 'YES'
			config.build_settings['LLVM_LTO'] = 'YES'
			config.build_settings['ENABLE_BITCODE'] = 'NO'
			config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '9.0'
			config.build_settings['OTHER_CFLAGS'] ||= ['-fdata-sections', '-ffunction-sections', '-fno-unwind-tables', '-fno-asynchronous-unwind-tables', '-Wno-shorten-64-to-32']
			config.build_settings['OTHER_CPLUSPLUSFLAGS'] ||= ['$(OTHER_CFLAGS)']
		end
	end
end
